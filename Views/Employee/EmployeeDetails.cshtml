
@{
    ViewData["Title"] = "EmployeeDetails";
}

<h1>Employee Details</h1>
<form asp-action="EmployeeDetails">
    <table>
         <tr>
            <td>Enter Employee Id</td>
            <td>
                @Html.TextBox("empid")
            </td>
        </tr>
        
        <tr>
            <td>Enter Name</td>
            <td>
                @Html.TextBox("name")
            </td>
        </tr>

        <tr>
            <td>Enter Salary</td>
            <td>
                @Html.TextBox("salary")
            </td>
        </tr>

        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("gender","Male") Male
                @Html.RadioButton("gender","Female") Female
            </td>
        </tr>

        <tr>
            <td>Departement</td>
            <td>
                @Html.DropDownList("options")
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Save" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>

